---
const isKontaktPage = Astro.url.pathname.includes("/kontakt");

---

{
  isKontaktPage ? (
    <div class="w-full bg-white text-center py-10">
      <p class="text-xs md:text-sm font-light text-black font-elza mt-2 md:mt-0">© 2025 Nanna Anker Høeg</p>
    </div>
  ) : (
    <div class="w-full bg-white flex flex-col md:flex-row md:justify-center px-5 lg:px-20 py-10 relative">
      <!-- Kontakt -->
      <div class="flex-1">
        <p class="text-center md:text-left text-base md:text-lg mb-1 font-elza font-medium">Kontakt</p>
        <div class="text-rod font-elza font-medium text-sm leading-6 md:leading-5 text-center md:text-left">
          <a class="hover:underline hover:scale-105 transform" href="tel:71202231">
            +45 71 20 22 31
          </a>
          <br />
          <a class="hover:underline hover:scale-105 transform" href="mailto:nannahoeg@hotmail.com">
            nannahoeg@hotmail.com
          </a>
        </div>
      </div>

      <!-- Copyright til desktop -->
      <div class="flex-1 flex flex-col justify-center ">
        <p id="nanna" class="md:block hidden text-xs md:text-sm font-light text-black font-elza mt-2 md:mt-0 text-center">
          © 2025 Nanna Anker Høeg
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex flex-row flex-1 justify-center mt-1 md:mt-0 md:justify-end">
        <div class="flex flex-col justify-center">
          <div class="flex">
            <a class="" href="https://www.linkedin.com/in/nanna-anker-h%C3%B8eg-a406432b7/">
              <img class="w-6 md:w-8 hover:scale-105" src="/linkedin-svgrepo-com.svg" alt="LinkedIn" />
            </a>
            <a class="" href="https://www.instagram.com/nanna.anker/">
              <img class="w-6 md:w-8 hover:scale-105" src="/instagram-svgrepo-com.svg" alt="Instagram" />
            </a>
          </div>
        </div>
      </div>

      <!-- Copyright til mobil -->
      <div class="w-full text-center md:hidden">
        <p id="nanna-mobile" class="text-xs font-light text-black font-elza mt-4">
          © 2025 Nanna Anker Høeg
        </p>
      </div>
    </div>
  )
}

