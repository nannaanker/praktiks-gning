---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Nanna Anker - Portfolio" description="Oplev Nanna Anker Høegs kreative arbejde som multimediedesigner.">
  <!-- component -->
  <div class="py-0">
    <div class="w-full">
      <div class="">
        <div class="flex flex-col relative">
          <div class="flex min-h-screen sticky top-0 overflow-hidden justify-center items-center w-full">
            <div id="div1" class="flex justify-center items-center w-full h-full">
              <div class="px-10 md:py-0">
                <div x-data="{ text: '', fullText: 'Nanna Anker Høeg', index: 0 }" x-init="let interval = setInterval(() => { 
                if (index < fullText.length) { 
                    text += fullText[index]; 
                    index++; 
                } else { 
                    clearInterval(interval);
                } 
            }, 100)" class="text-sm md:text-2xl font-elza font-medium text-black">
                  <span x-text="text"></span>
                </div>
                <img src="/Portfolio.svg" alt="h1" class="max-w-full max-h-full" />

                <div x-data="{ text: '', fullText: 'Multimediedesigner', index: 0 }" x-init="let interval = setInterval(() => { 
                if (index < fullText.length) { 
                    text += fullText[index]; 
                    index++; 
                } else { 
                    clearInterval(interval);
                } 
            }, 100)" class="text-sm md:text-2xl font-elza font-extralight text-black text-right mt-2">
                  <span x-text="text"></span>
                </div>
              </div>
            </div>
            <div id="div2">
              <div class="w-full h-[500px]"></div>
            </div>
          </div>

          <div id="ommig" class="flex h-screen sticky top-auto overflow-hidden z-20">
            <section class="bg-cover bg-no-repeat bg-[url('/baggrund.webp')] w-full md:py-32 px-3 flex flex-col">
              <img class="flex m-auto" src="ommig.svg" alt="Beskrivelse af Nanna Anker Høeg" loading="lazy" />
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
